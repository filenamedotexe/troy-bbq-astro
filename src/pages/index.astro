---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Button } from '../components/ui/Button';
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from '../components/ui/Card';
---

<BaseLayout title="Troy BBQ - Authentic BBQ & Catering">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-r from-orange-900 to-red-900 text-white py-20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          Authentic BBQ <br />
          <span class="text-orange-300">Made with Passion</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-gray-200">
          Family-owned since 1985, serving the finest smoked meats and catering services in Troy, NY
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button size="lg" asChild>
            <a href="/menu">View Our Menu</a>
          </Button>
          <Button size="lg" variant="outline" asChild>
            <a href="/catering">Catering Services</a>
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Why Choose Troy BBQ?
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Three generations of BBQ mastery, using time-tested recipes and the finest ingredients
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <Card>
          <CardHeader>
            <CardTitle>Smoked Daily</CardTitle>
            <CardDescription>
              Our meats are slow-smoked fresh every day using hickory and oak wood for that perfect flavor
            </CardDescription>
          </CardHeader>
        </Card>
        
        <Card>
          <CardHeader>
            <CardTitle>Family Recipes</CardTitle>
            <CardDescription>
              Secret rubs and sauces passed down through three generations of pitmasters
            </CardDescription>
          </CardHeader>
        </Card>
        
        <Card>
          <CardHeader>
            <CardTitle>Full Catering</CardTitle>
            <CardDescription>
              Professional catering services for corporate events, weddings, and private parties
            </CardDescription>
          </CardHeader>
        </Card>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-primary text-primary-foreground">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Ready to Experience Authentic BBQ?
      </h2>
      <p class="text-lg mb-8 text-primary-foreground/90">
        Visit us today or let us cater your next event
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button size="lg" variant="secondary" asChild>
          <a href="/contact">Visit Our Restaurant</a>
        </Button>
        <Button size="lg" variant="outline" asChild>
          <a href="/catering">Get Catering Quote</a>
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
