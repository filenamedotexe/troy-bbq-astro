---
// This page handles unsubscribe via URL parameters
const { url } = Astro;
const token = url.searchParams.get('token');

if (token) {
  // Redirect to the API endpoint to handle the unsubscribe
  return Astro.redirect(`/api/email-preferences/unsubscribe?token=${token}`);
}
